<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>App Metrics is an open-source .NET Standard library used to record application metrics.</Description>
    <TargetFrameworks>netstandard1.6</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net452</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>appmetrics;metrics;apdex;meter;gauge;counter;timer;histogram;open tracing;tracing</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenTracing.Contrib.Decorators" Version="0.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\App.Metrics.Abstractions\App.Metrics.Abstractions.csproj" />
    <ProjectReference Include="..\App.Metrics.Core\App.Metrics.Core.csproj" />
    <ProjectReference Include="..\App.Metrics\App.Metrics.csproj" />
  </ItemGroup>
  
</Project>
